{
  "name": "@momo/app",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "vite build",
    "clean": "git clean -xdf .cache .turbo node_modules",
    "dev": "npm-run-all --parallel dev:frontend dev:backend",
    "dev:frontend": "vite --open",
    "dev:backend": "convex dev",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "tsc -p convex -noEmit --pretty false && tsc -p . -noEmit --pretty false && convex dev --once && vite build",
    "start": "pnpm with-env start",
    "typecheck": "tsc --noEmit",
    "with-env": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "@convex-dev/auth": "^0.0.80",
    "@momo/ui": "workspace:*",
    "@momo/validators": "workspace:*",
    "canvas-confetti": "^1.9.3",
    "clsx": "^2.1.1",
    "convex": "^1.24.2",
    "dexie": "^4.0.11",
    "openai": "^5.12.2",
    "react": "catalog:react19",
    "react-dom": "catalog:react19",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@momo/eslint-config": "workspace:*",
    "@momo/prettier-config": "workspace:*",
    "@momo/tailwind-config": "workspace:*",
    "@momo/tsconfig": "workspace:*",
    "@types/canvas-confetti": "^1.9.0",
    "@types/node": "^22.18.1",
    "@types/react": "catalog:react19",
    "@types/react-dom": "catalog:react19",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "~10",
    "dotenv-cli": "^10.0.0",
    "eslint": "catalog:",
    "globals": "^15.15.0",
    "npm-run-all": "^4.1.5",
    "prettier": "catalog:",
    "tailwindcss": "catalog:",
    "typescript": "catalog:",
    "vite": "^6.2.0"
  },
  "prettier": "@momo/prettier-config"
}
